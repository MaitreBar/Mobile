<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cancelamento_reserva">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#77403D3D"
        android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/branco"
                android:layout_marginTop="550dp"
                android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="@string/textoCancelar"
                        android:fontFamily="@font/quicksand_regular"
                        android:textSize="20sp"
                        android:gravity="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <Button
                            android:layout_width="150dp"
                            android:layout_height="60dp"
                            android:text="@string/feedbacks"
                            android:textSize="20sp"
                            android:textColor="@color/verdeEscuro"
                            android:backgroundTint="@color/branco"/>

                        <Button
                            android:layout_width="210dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="19sp"
                            android:text="@string/cancelarReserva"
                            android:textSize="20sp"
                            android:backgroundTint="@color/begeClaro"
                            android:textColor="@color/branco"/>

                    </LinearLayout>

            </LinearLayout>



            </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>