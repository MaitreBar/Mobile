<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="bem vindo (a)"
            android:textColor="#606060"
            android:textSize="13sp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="Liz"
            android:textColor="#101010"
            android:textSize="16sp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <EditText
                android:layout_marginHorizontal="20dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="@string/Pesquisar"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_search_grey"
                android:drawableRight="@drawable/ic_filter_grey"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/banner" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="145dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="Categorias"
                android:textColor="#101010"
                android:textSize="16sp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:background="@color/branco"
                    android:src="@drawable/menu1">

                </ImageButton>
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@color/branco"
                    android:src="@drawable/menu2"></ImageButton>
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@color/branco"
                    android:src="@drawable/menu3"></ImageButton>
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@color/branco"
                    android:src="@drawable/menu4"></ImageButton>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="@string/Estabelecimentos"
                    android:textColor="#101010"
                    android:textSize="16sp">
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="3"
            android:columnCount="2"
            android:layout_margin="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@mipmap/bar"
                        android:clickable="true" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Beerwings"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginVertical="10dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                        <TextView
                            style="@style/Descricao"
                            android:text="@string/TresCifroes"
                            android:gravity="center_vertical"
                            android:layout_marginHorizontal="10dp"
                            />
                        <TextView
                            style="@style/Descricao"
                            android:drawableRight="@drawable/ic_star"
                            android:gravity="center_vertical"
                            />
                        <TextView
                            style="@style/Descricao"
                            android:text="4.8"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@mipmap/bar"
                        android:clickable="true" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Madureira"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginVertical="10dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                        <TextView
                            style="@style/Descricao"
                            android:text="@string/DoisCifroes"
                            android:gravity="center_vertical"
                            android:layout_marginHorizontal="10dp"
                            />
                        <TextView
                            style="@style/Descricao"
                            android:drawableRight="@drawable/ic_star"
                            android:gravity="center_vertical"
                            />
                        <TextView
                            style="@style/Descricao"
                            android:text="3.9"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@mipmap/bar"
                        android:clickable="true" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Go Coffee"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginVertical="10dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                        <TextView
                            style="@style/Descricao"
                            android:text="@string/TresCifroes"
                            android:gravity="center_vertical"
                            android:layout_marginHorizontal="10dp"
                            />
                        <TextView
                            style="@style/Descricao"
                            android:drawableRight="@drawable/ic_star"
                            android:gravity="center_vertical"
                            />
                        <TextView
                            style="@style/Descricao"
                            android:text="4.5"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@mipmap/bar"
                        android:clickable="true" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Augusta Bar"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginVertical="10dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                        <TextView
                            style="@style/Descricao"
                            android:text="@string/DoisCifroes"
                            android:gravity="center_vertical"
                            android:layout_marginHorizontal="10dp"
                            />
                        <TextView
                            style="@style/Descricao"
                            android:drawableRight="@drawable/ic_star"
                            android:gravity="center_vertical"
                            />
                        <TextView
                            style="@style/Descricao"
                            android:text="5.0"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@mipmap/bar"
                        android:clickable="true" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Botequim"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginVertical="10dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                        <TextView
                            style="@style/Descricao"
                            android:text="@string/TresCifroes"
                            android:gravity="center_vertical"
                            android:layout_marginHorizontal="10dp"
                            />
                        <TextView
                            style="@style/Descricao"
                            android:drawableRight="@drawable/ic_star"
                            android:gravity="center_vertical"
                            />
                        <TextView
                            style="@style/Descricao"
                            android:text="4.8"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@mipmap/bar"
                        android:clickable="true" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Parisiense"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginVertical="10dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                        <TextView
                            style="@style/Descricao"
                            android:text="@string/DoisCifroes"
                            android:gravity="center_vertical"
                            android:layout_marginHorizontal="10dp"
                            />
                        <TextView
                            style="@style/Descricao"
                            android:drawableRight="@drawable/ic_star"
                            android:gravity="center_vertical"
                            />
                        <TextView
                            style="@style/Descricao"
                            android:text="4.8"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

    </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="421dp"
        android:layout_height="76dp"
        android:layout_gravity="bottom"
        android:background="@color/branco"
        android:fontFamily="@font/quicksand_regular"
        app:menu="@menu/bottom_nav_menu"
        tools:layout_editor_absoluteX="-7dp"
        tools:layout_editor_absoluteY="708dp"></com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>