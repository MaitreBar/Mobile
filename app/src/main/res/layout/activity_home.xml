<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="@drawable/backgroud">


    <ImageView
        android:id="@+id/iv_logo_home"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/logo_verde_agua" />

    <TextView
        android:id="@+id/tv_nome_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/maitre"
        android:textColor="@color/begeClaro"
        android:fontFamily="@font/old_standard_tt_regular"
        android:textSize="48sp"
        android:gravity="center"
        android:layout_below="@id/iv_logo_home"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_txt_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reserve sua experiÃªncia."
        android:textColor="@color/begeClaro"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:fontFamily="@font/quicksand_regular"
        android:layout_below="@+id/tv_nome_home"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tv_txt_home"
        android:layout_marginTop="90dp"
        android:layout_centerInParent="true">

        <Button
            style="@style/botaoHomePage"
            android:text="@string/botao_cadastrese"
            android:id="@+id/bt_cadastro"/>
        <Button
            style="@style/botaoHomePage"
            android:text="@string/botao_login"
            android:id="@+id/bt_login"/>
    </LinearLayout>
</RelativeLayout>